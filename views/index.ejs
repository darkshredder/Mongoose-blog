<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <% Records.forEach(function(row){ %>
      <div>
        <%=row.author %>
        <% }) %>
        <% Records.forEach(element => { %>
          <%= element.body %> 
        
        <% }) %>


        <form action="/" id="EmployeeForm" class="form-horizontal" method="post" role="form">
        
          <div id="signupalert" style="display:none" class="alert alert-danger">
            <p>Error:</p>
            <span></span>
          </div>
        
          <div class="form-group">
            <label for="firstname" class="col-md-3 control-label">title</label>
            <div class="col-md-9">
              <input type="text" class="form-control" name="title" placeholder="Enter Your Name">
            </div>
          </div>
        
          <div class="form-group">
            <label for="email" class="col-md-3 control-label">Author</label>
            <div class="col-md-9">
              <input type="text" class="form-control" name="author" placeholder="Email Address">
            </div>
          </div>
      
          
          <div class="form-group">
            <label for="icode" class="col-md-3 control-label">Body</label>
            <div class="col-md-9">
              <input type="text" class="form-control" name="body" placeholder="Enter Total Hours">
            </div>
          </div>
        
          <div class="form-group">
            <!-- Button -->
            <div class="col-md-offset-3 col-md-9">
              <input type="submit" name="submit" value="submit" class="btn btn-primary">
            </div>
          </div>
        
        
        
        
        
        </form>
      </div>
  </body>
</html>
